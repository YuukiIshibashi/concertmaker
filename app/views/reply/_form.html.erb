<p>返信する</p>


<%= form_for([request,reply], url:request_reply_index_path) do |f| %>
  <%= f.error_messages! %>
  <%= f.hidden_field :request_id %>
  <%= f.hidden_field :user_id if current_user %>
  <%= f.hidden_field :performer_id if current_performer %>
  <div class="field">
    <%= f.text_field :content, placeholder: "返信", class: "form-control"  %>
  </div>
  <%= f.submit %>
  <% end %>
